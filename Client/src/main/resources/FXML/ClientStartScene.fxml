<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="700.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ClientStartController">
   <children>
      <VBox>
         <children>
            <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Enter IP Address to connect to:" />
                  <TextField fx:id="ipAddress" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="210.0" promptText="IP Address (e.g. 127.0.0.1)" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Enter port number to connect to:" />
                  <TextField fx:id="portNumber" prefHeight="26.0" prefWidth="200.0" promptText="port number (e.g.5555)" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connectButtonMethod" text="Connect" />
   </children>
</VBox>
